<% include ../partials/header %>
    
    <header class="jumbotron">
        <div class="conatiner">
            <h1><span class="glyphicon glyphicon-tent"></span> Welcome  to YelpCamp!</h1>
            <p>View our handpicked campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center flexwrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=" <%= "/uploads/" + campground.images[0] %> ">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a id="moreinfo" href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>